<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.rule" id="contacts_access_always_by_administrators">
            <field name="name">Contacts can be always accessed by administrators</field>
            <field name="model_id" ref="model_res_partner"/>
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups" eval="[(4, ref('base.group_erp_manager'))]"/>
        </record>
        <record model="ir.rule" id="contacts_access_only_by_authorized_users">
            <field name="name">Contacts can be only accessed by authorized users</field>
            <field name="model_id" ref="model_res_partner"/>
			<field name="domain_force">['|',('authorized_users','=',user.id),('user_ids','=',user.id)]</field>
			<field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>
    </data>
</odoo>